<h1>Add a new song</h1>
<hr/>

<% if @song && @song.errors.any? %>
  <div class="Error">
    <strong>
      There are some issues with your post, please fix:
    </strong>
    <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/songs" method="POST">
  <div class="form">
  <label>Name:</label>
  <input type="text" name="author" value="<%= @song && @song.author %>">
  </div>
  <div class="form">
  <label>Song Title:</label>
  <input type="text" name="title" value="<%= @song && @song.title %>">
  </div>
  <div class="form">
    <label>URL(optional): </label>
    <input type="text" name="url" value="<%= @song && @song.url %>">
  </div>
  <div class="form">
    <input type="submit" value="Submit">
  </div>
</form>
<hr/>
<a href = "/songs">Back</a>