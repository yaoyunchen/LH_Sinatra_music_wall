<h1>Add New Song</h1>
<hr/>


<form class="form-horizontal" action="/songs" method="POST">
  <% if @song && @song.errors.any? %>
    <div>
      <strong>Please fix the following issues:</strong>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message%></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Name:</label>
    <input class="form-control" type="text" name="author" value="<%= @song && @song.author %>">
  </div>
  <div class="form-group">
    <label>Song title:</label>
    <input class="form-control" type="text" name="title" value="<%= @song && @song.title %>">
  </div>
  <div class="form-group">
    <label>URL(optional): </label>
    <input class="form-control" type="text" name="url" value="<%= @song && @song.url %>">
  </div>
  <!--
  <div class="checkbox">
      <label><input type="checkbox"> Remember me</label>
  </div>
  -->
  <button type="submit" class="btn btn-primary">Submit</button>

